<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.androidexample.gcm.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!-- Required to show current location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- Network State Permissions to detect Internet status -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permission to vibrate -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".Experimental.AppData">

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity
            android:name=".Activities.Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Activities.LoginActivity"
            android:label="FindNDrive Log in/Register" />
        <activity
            android:name=".Activities.Activities.RegistrationActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="Registration Activity" />
        <activity
            android:alwaysRetainTaskState="true"
            android:name=".Activities.Activities.HomeActivity"
            android:label="home_activity" />
        <activity
            android:name=".Activities.Activities.PostNewCarShareActivity"
            android:label="New Car Share" />

        <activity
            android:name=".Activities.Activities.ManageAsDriverActivity"
            android:label="Manage Car Share" />

        <activity
            android:name=".Activities.Activities.ManageAsPassengerActivity"
            android:label="Manage Car Share" />

        <activity
            android:name=".Activities.Activities.ContactDriverActivity"
            android:label="Manage Car Share" />

        <activity
            android:name=".Activities.Activities.CarShareRequestsActivity"
            android:label="Manage Car Share" />

        <activity
            android:name=".Activities.Activities.CarShareRequestDetailsActivity"
            android:label="Manage Car Share" />

        <activity
            android:name=".Activities.Activities.TravelBuddyListActivity"
            android:label="Manage Car Share" />

        <activity
            android:name=".Activities.Activities.CarShareChatActivity"
            android:label="Chat" />

        <activity
            android:name=".Activities.Activities.MapActivity"
            android:label="Chat" />

        <receiver
            android:name=".GCM.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.example.gcm" />
            </intent-filter>
        </receiver>
        <service android:name=".GCM.GcmIntentService" />
        <!-- Goolge API Key -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAQYhCFfCMQuiqNQdDUof1QA1zXKTM4qKw" />
    </application>

</manifest>
