<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background"
    android:paddingTop="?android:attr/actionBarSize">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#151515"
            android:layout_below="@+id/MyCarSharesStatusIconsLayout"></LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/MyNotificationsActivityMainListView"/>

        <Button
            android:id="@+id/ActivityMyNotificationsLoadMoreButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ShowMore"
            android:layout_alignParentBottom="true"
            style="@style/ButtonStyle"
            android:background="@drawable/button_selector"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="No notifications to display."
            android:id="@+id/MyNotificationsActivityNoNotificationsTextView"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/LargeTextField"/>

        <ProgressBar
            android:id="@+id/ActivityMyNotificationsProgressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/progress"/>

    </RelativeLayout>
</RelativeLayout>