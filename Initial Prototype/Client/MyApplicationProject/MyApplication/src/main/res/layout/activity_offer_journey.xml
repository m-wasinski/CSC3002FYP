<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/OfferNewJourneyMapFragment"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:text="Step 1. Specify departure, destination and optional waypoints."
        android:id="@+id/ActivityOfferJourneyStepOneTextView"
        style="@style/RegularTextField"
        android:background="#D9222930"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add  waypoint"
        android:id="@+id/ActivityOfferJourneyThroughPointButton"
        android:background="@drawable/button_selector"
        android:layout_below="@+id/ActivityOfferJourneyStepOneTextView"
        style="@style/ButtonStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:background="#D9222930">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ActivityOfferJourneyFromEditText"
            android:text="From:"
            style="@style/MyCarSharesHeader"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ActivityOfferJourneyDepartureEditText"
            android:hint="Enter departure address"
            style="@style/RegularTextField"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ActivityOfferJourneyViaEditText"
            android:text="via:"
            android:layout_marginLeft="10sp"
            style="@style/MyCarSharesHeader"
            android:visibility="gone"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ActivityOfferJourneyScrollView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/AddNewJourneyAdditionalDestinationLayout">

            </LinearLayout>

        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ActivityOfferJourneyToEditText"
            android:text="To:"
            style="@style/MyCarSharesHeader"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ActivityOfferJourneyDestinationEditText"
            android:hint="Enter destination address"
            style="@style/RegularTextField"
            android:layout_marginTop="10sp"
            android:singleLine="true"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 2..."
            android:id="@+id/AddNewJourneyDoneButton"
            android:background="@drawable/button_selector"
            style="@style/ButtonStyle"/>

    </LinearLayout>

</RelativeLayout>