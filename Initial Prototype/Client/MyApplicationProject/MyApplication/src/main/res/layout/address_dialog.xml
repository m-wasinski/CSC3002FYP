<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:id="@+id/AddressDialogHeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address:"
        style="@style/MyCarSharesHeader"/>

    <EditText
        android:id="@+id/AddressDialogAddressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City, Street, Post-Code"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:id="@+id/AddressDialogAddressHintTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hint: You can enter a very specific address such as City, Street Name and Post-Code, or a very generic one for example just the City. The more specific the address the more accurate the results."/>

    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:id="@+id/AddressDialogHeader2TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Include journeys within:"
        style="@style/MyCarSharesHeader"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/AddressDialogPerimeterEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:textAlignment="textEnd"
            android:layout_marginLeft="10sp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="miles of the above address."
            android:padding="5dp"
            android:id="@+id/FeeAlertDialogFeeLabel"
            android:textColor="#000000"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:id="@+id/AddressDialogAddressHint2TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hint: The bigger the search perimeter, the higher the likelyhood of finding the desired journey in the area."/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AddressDialogOKButton"
        android:text="OK"
        android:layout_marginTop="10sp"/>
</LinearLayout>