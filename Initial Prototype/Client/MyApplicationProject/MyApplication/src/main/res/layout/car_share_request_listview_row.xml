<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/CarShareRequestAdapterParentLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CarShareRequestAdapterIcon"
        android:src="@drawable/user_man"
        android:layout_margin="10sp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="Request From: "
            android:id="@+id/CarShareRequestAdapterNameTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="Status: "
            android:layout_marginTop="5sp"
            android:id="@+id/CarShareRequestAdapterStatusTextView" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New!"
            android:layout_margin="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/CarShareRequestAdapterNewTextView" />
    </LinearLayout>
</LinearLayout>