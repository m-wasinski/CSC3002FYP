<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10sp"
    android:id="@+id/InstantMessengerActivityLayout">

    <TextView
        android:id="@+id/InstantMessengerRowMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="Body"
        style="@style/MyCarSharesHeader"/>

    <TextView android:id="@+id/InstantMessengerRowDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:layout_alignBottom="@+id/InstantMessengerRowMessageTextView"
        android:layout_alignRight="@+id/InstantMessengerRowMessageTextView"
        android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>

</LinearLayout>