<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_marginTop="10sp">

        <ImageView android:id="@+id/MyRequestsImageStatusImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/undecided"/>

        <TextView android:id="@+id/MyRequestsStatusTextView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10sp"
            android:gravity="bottom|center"
            android:text="Decision"
            android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp">

        <TextView android:id="@+id/MyRequestsJourneyIdTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Journey id:"/>

        <TextView android:id="@+id/MyRequestsDriverTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Driver: "/>

        <TextView android:id="@+id/MyRequestsJourneyFromToTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="From City A to City B"/>

        <TextView android:id="@+id/MyRequestsDateTimeTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Leaving on:"/>

        <TextView android:id="@+id/MyRequestsRequestSentOnTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Request sent on:"/>

        <TextView android:id="@+id/MyRequestsReplyReceivedOnTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Reply received on:"/>
    </LinearLayout>

</LinearLayout>