<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:id="@+id/SearchParentLinearLayout">

        <LinearLayout
            android:id="@+id/SearchResultsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:background="#D9222930">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SearchCarSharesListView"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SearchPanelLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:background="#F2222930">

            <TextView android:id="@+id/SearchLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/Minimize"
                style="@style/FontStyle"/>

            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView android:id="@+id/FromLAbel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="From"
                        style="@style/LoginFields"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:hint="City"
                        android:id="@+id/SearchDepartureCityTextView"
                        android:singleLine="true"
                        android:layout_weight="1"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:hint="Street (optional)"
                        android:id="@+id/SearchDepartureStreetTextView"
                        android:singleLine="true"
                        android:layout_weight="1"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SearchFragmentRegionFromSpinner"
                        android:spinnerMode="dialog"/>

                </LinearLayout>

                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView android:id="@+id/ToLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="To"
                        style="@style/LoginFields"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:hint="City"
                        android:id="@+id/SearchDestinationCityTextView"
                        android:singleLine="true"
                        android:layout_weight="1"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:hint="Street (optional)"
                        android:id="@+id/SearchDestinationStreetTextView"
                        android:singleLine="true"
                        android:layout_weight="1"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SearchFragmentRegionToSpinner"
                        style="@style/FontStyle"
                        android:spinnerMode="dialog"/>

                </LinearLayout>
            </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:id="@+id/FromLAbel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Date &amp; Time"
                        style="@style/LoginFields"/>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/SearchDateTextView"
                            android:hint="@string/Date"
                            android:editable="false"
                            android:singleLine="true"
                            android:layout_weight="1"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/SearchTimeTextView"
                            android:hint="@string/Time"
                            android:editable="false"
                            android:singleLine="true"
                            android:layout_weight="1"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:id="@+id/FromLAbel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other criteria"
                        style="@style/LoginFields"/>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="40sp"
                            android:id="@+id/SearchFragmentGenderSpinner"
                            android:spinnerMode="dialog"
                            android:layout_weight="1"/>

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="40sp"
                            android:id="@+id/SearchFragmentSmokersSpinner"
                            android:spinnerMode="dialog"
                            android:layout_weight="1"/>

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="40sp"
                            android:id="@+id/SearchFragmentFreeSpinner"
                            android:spinnerMode="dialog"
                            android:layout_weight="1"/>

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="40sp"
                            android:id="@+id/SearchFragmentPetsSpinner"
                            android:spinnerMode="dialog"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/SearchButtonText"
                    android:id="@+id/SearchButton"
                    style="@style/ButtonStyle"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
