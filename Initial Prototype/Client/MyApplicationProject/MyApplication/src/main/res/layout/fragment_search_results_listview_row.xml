<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CC222930">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/FragmentSearchFromToTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="From City A to city B"
            style="@style/MyCarSharesHeader"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp">

            <TextView android:id="@+id/FragmentSearchDateTextView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Date: "
                style="@style/ContentBody"
                android:layout_weight="1"/>

            <TextView android:id="@+id/FragmentSearchTimeTextView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Time: "
                android:layout_weight="1"
                style="@style/ContentBody"/>

            <TextView android:id="@+id/FragmentSearchSeatsLeftTextView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Seats left: "
                android:layout_weight="1"
                style="@style/ContentBody"/>

            <TextView android:id="@+id/FragmentSearchFeeTextView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Fee: "
                android:layout_weight="1"
                style="@style/ContentBody"/>

    </LinearLayout>

</LinearLayout>

</LinearLayout>
