<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D9222930"
        android:layout_marginTop="5sp">

        <TextView android:id="@+id/FragmentSearchFromToTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="From City A to city B"
            style="@style/MyCarSharesHeader"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#D9222930">

        <ImageView android:id="@+id/FragmentSearchResultsQualityIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:src="@drawable/green_light"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp">

            <TextView android:id="@+id/FragmentSearchJourneyIdTextView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Journey id: "
                android:layout_weight="1"
                style="@style/ContentBody"/>

            <TextView android:id="@+id/FragmentSearchDriverNameTextView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Driver: "
                style="@style/ContentBody"
                android:layout_weight="1"/>

            <TextView android:id="@+id/FragmentSearchDateTextView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Date: "
                style="@style/ContentBody"
                android:layout_weight="1"/>

            <TextView android:id="@+id/FragmentSearchTimeTextView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Time: "
                android:layout_weight="1"
                style="@style/ContentBody"/>

            <TextView android:id="@+id/FragmentSearchSeatsLeftTextView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Seats left: "
                android:layout_weight="1"
                style="@style/ContentBody"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


        </LinearLayout>
    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9222930">

        <TextView android:id="@+id/FragmentSearchDriverRatingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="10sp"
            android:text="Driver rating:"
            android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>

        <ImageView android:id="@+id/FragmentSearchResultsDriverRatingIcon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_rating"/>

        <ImageView android:id="@+id/FragmentSearchResultsDriverRatingIcon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_rating"/>

        <ImageView android:id="@+id/FragmentSearchResultsDriverRatingIcon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_rating"/>

        <ImageView android:id="@+id/FragmentSearchResultsDriverRatingIcon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_rating"/>

        <ImageView android:id="@+id/FragmentSearchResultsDriverRatingIcon5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_rating"/>

        <ImageView android:id="@+id/FragmentSearchFeeIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:src="@drawable/pound_sign"/>

        <TextView android:id="@+id/FragmentSearchFeeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fee"
            android:layout_margin="5sp"
            android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>
    </LinearLayout>
</LinearLayout>
