<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CC222930">

    <TextView android:id="@+id/ListViewRowSearchResultHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RegularEditText"
        android:layout_marginLeft="5dip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/MyCarSharesContentLayout"
        android:layout_below="@+id/ListViewRowSearchResultHeaderTextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dip"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#32B4E4"
                android:text="Date: "/>

            <TextView android:id="@+id/FragmentSearchDateTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                style="@style/ContentBody"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#32B4E4"
                android:text="Fee: "/>

            <TextView android:id="@+id/FragmentSearchFeeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                style="@style/ContentBody"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#32B4E4"
                android:text="Time: "/>

            <TextView android:id="@+id/FragmentSearchTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                style="@style/ContentBody"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#32B4E4"
                android:text="Available Seats: "/>

            <TextView android:id="@+id/FragmentSearchSeatsLeftTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ContentBody"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#B7D8E8"
        android:layout_below="@+id/MyCarSharesContentLayout"></LinearLayout>
</RelativeLayout>
