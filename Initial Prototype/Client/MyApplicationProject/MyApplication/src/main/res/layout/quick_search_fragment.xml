<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/DestinationCityHint"
            android:id="@+id/QuickSearchDestinationCity"
            android:layout_gravity="left|center_vertical"
            android:singleLine="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/DepartureCityHint"
            android:id="@+id/QuickSearchDepartureCity"
            android:layout_gravity="left|center_vertical"
            android:singleLine="true"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/SearchButtonText"
            android:layout_marginTop="10dp"
            android:id="@+id/QuickSearchButton" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Smokers"
            android:id="@+id/SmokersCheckbox" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/WomenOnly"
            android:id="@+id/WomenOnlyCheckbox" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/FreeOnly"
            android:id="@+id/FreeCheckbox" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/QuickSearchDateTextView"
            android:hint="@string/SelectDate"
            android:layout_gravity="center_horizontal"
            android:editable="false"
            android:singleLine="true"/>
    </LinearLayout>

</LinearLayout>