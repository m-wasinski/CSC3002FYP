<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/DestinationCityHint"
            android:id="@+id/QuickSearchDestinationCity"
            android:layout_gravity="left|center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/QuickSearchDepartureCity" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/DepartureCityHint"
            android:id="@+id/QuickSearchDepartureCity"
            android:layout_gravity="left|center_vertical"
            android:layout_alignBaseline="@+id/checkBox"
            android:layout_alignBottom="@+id/checkBox"
            android:layout_toLeftOf="@+id/checkBox3" />

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Search"
            android:layout_marginTop="10dp"
            android:id="@+id/QuickSearchButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Smokers"
            android:id="@+id/SmokersCheckbox"
            android:layout_below="@+id/QuickSearchDestinationCity"
            android:layout_alignRight="@+id/checkBox2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/WomenOnly"
            android:id="@+id/WomenOnlyCheckbox"
            android:layout_alignBaseline="@+id/checkBox3"
            android:layout_alignBottom="@+id/checkBox3"
            android:layout_centerHorizontal="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Free"
            android:id="@+id/FeeCheckbox"
            android:layout_above="@+id/QuickSearchButton"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/DateEditText"
            android:hint="@string/SelectDate"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>