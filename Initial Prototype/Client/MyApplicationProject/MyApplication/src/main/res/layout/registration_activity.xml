<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="500px"
        android:layout_height="100px"
        android:id="@+id/UserNameTextField"
        android:layout_marginTop="100dp"
        android:hint="@string/UserNameHint"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="500px"
        android:layout_height="100px"
        android:id="@+id/EmailTextField"
        android:layout_marginTop="20dp"
        android:hint="@string/EmailHint"
        android:layout_below="@+id/UserNameTextField"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="500px"
        android:layout_height="100px"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/RegistrationPasswordTextField"
        android:hint="@string/PasswordHint"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/EmailTextField"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="500px"
        android:layout_height="100px"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/RegistrationConfirmPasswordTextField"
        android:hint="@string/ConfirmPasswordHint"
        android:layout_below="@+id/RegistrationPasswordTextField"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="500px"
        android:layout_height="100px"
        android:text="Register"
        android:id="@+id/RegisterNewUserButton"
        android:layout_below="@+id/RegistrationConfirmPasswordTextField"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>