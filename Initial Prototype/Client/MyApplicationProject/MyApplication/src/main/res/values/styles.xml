<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ContentBody">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#B7D8E8</item>
    </style>

    <style name="FontStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Header">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="UniversalButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MyCarSharesHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#32B4E4</item>
    </style>

    <style name="TransparentButton">
        <item name="android:background">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomButton">
        <item name="android:background">#D9222930</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="JourneyDetailsButtons">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:layout_marginLeft">2sp</item>
    </style>

    <style name="LoginFields">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="FilterTextField">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#0086C9</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="MapFields">
        <item name="android:textColor">#0086C9</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="MapRadiusFields">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0086C9</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="MapSearchTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#0086C9</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="RegularEditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#B7D8E8</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="SmallEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#B7D8E8</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="LargeTextField">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#B7D8E8</item>
    </style>

    <color name="ValueCorrect">#AAFFAA</color>

    <color name="LayoutNormal">#80151515</color>
    <color name="LayoutPressed">#807e7e7e</color>

    <color name="RegularButtonNormal">#BF0086C9</color>
    <color name="RegularButtonPressed">#E69e9e9e</color>
    <color name="RegularButtonFont">#FFFFFF</color>

    <color name="TransparentButtonNormal">#00FFFFFF</color>
    <color name="TransparentButtonPressed">#E69e9e9e</color>
    <color name="TransparentButtonFont">#B7D8E8</color>

    <color name="CustomButtonNormal">#BF0086C9</color>
    <color name="CustomButtonPressed">#E69e9e9e</color>
    <color name="CustomButtonFont">#FFFFFF</color>

    <style name="Theme.CustomDialog" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
