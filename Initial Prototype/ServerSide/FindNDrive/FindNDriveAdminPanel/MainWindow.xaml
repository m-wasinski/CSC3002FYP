<Window x:Class="FindNDriveAdminPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Stretch">
        <Label Content="Login" HorizontalAlignment="Center"/>

        <!-- Service Response - Success/Fail and errors, if there are any -->
        <Label Content="{Binding ServiceResponse}" />
        <Label Content="{Binding ServiceResponseErrors}"/>
        
        <TextBox Text="{ Binding LoginModel.Username, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
        <PasswordBox Name="TxtPassword" Width="200"/>
        <Button Content="Login" HorizontalAlignment="Center" Width="200"
                Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=TxtPassword}" Margin="10"
                IsDefault="True">
        </Button>
    </StackPanel>
</Window>
