<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10sp"
    android:id="@+id/ListViewRowJourneyMessageParentLinearLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ListviewRowJourneyMessageSenderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LargeBlueHeader"/>

        <TextView
            android:id="@+id/ListviewRowJourneyMessageMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ContentBody"/>

    </LinearLayout>

    <TextView android:id="@+id/ListviewRowJourneyMessageSentOnTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Small.Inverse"/>

</LinearLayout>