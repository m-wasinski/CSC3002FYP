<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mvvm="clr-namespace:CODE.Framework.Wpf.Mvvm;assembly=CODE.Framework.Wpf.Mvvm">
    
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="List.Metro.xaml"/>
	</ResourceDictionary.MergedDictionaries>

    <Style TargetType="ListBox" x:Key="CustomerList2" BasedOn="{StaticResource CustomerList}">
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style TargetType="mvvm:View" x:Key="SimpleSearch" BasedOn="{StaticResource CODE.Framework-Layout-SimpleFormLayout}">
        <Style.Resources>
            <Style TargetType="Button" BasedOn="{StaticResource Metro-Control-Button}">
                <Setter Property="Margin" Value="0,10,0,0" />
                <Setter Property="Foreground" Value="White" />
            </Style>
            <Style TargetType="Label">
                <Setter Property="Foreground" Value="White" />
            </Style>
        </Style.Resources>
        
        <Setter Property="Background" Value="{DynamicResource CODE.Framework-Application-ThemeBrush1}" />
        <Setter Property="Padding" Value="10" />
    </Style>
    
</ResourceDictionary>
